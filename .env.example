# =============================================================================
# MCP Text-to-SQL Server Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
DEBUG=false

# -----------------------------------------------------------------------------
# LLM Provider Selection
# -----------------------------------------------------------------------------
# Choose your LLM provider: openai | anthropic | gemini | auto
# "auto" will use the first available provider based on configured API keys
# Priority: openai > anthropic > gemini
LLM_PROVIDER=auto

# -----------------------------------------------------------------------------
# OpenAI Configuration (required if LLM_PROVIDER=openai or auto with only OpenAI key)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=o1

# -----------------------------------------------------------------------------
# Anthropic Configuration (required if LLM_PROVIDER=anthropic)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# Google Gemini Configuration (required if LLM_PROVIDER=gemini)
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# -----------------------------------------------------------------------------
# Common LLM Settings
# -----------------------------------------------------------------------------
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2000

# -----------------------------------------------------------------------------
# Query Settings
# -----------------------------------------------------------------------------
# Default query mode: sql | nosql | files | mixed
DEFAULT_QUERY_MODE=mixed

# Maximum number of rows to return from queries
MAX_RESULTS=1000

# Query execution timeout in seconds
QUERY_TIMEOUT_SECONDS=30

# Enable read-only mode (only SELECT/read operations allowed)
READ_ONLY_MODE=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# Log format: json | console
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Data Sources (Optional - can be configured via API)
# -----------------------------------------------------------------------------
# Example PostgreSQL connection
# POSTGRES_MAIN_URL=postgresql://user:password@localhost:5432/mydb

# Example MongoDB connection
# MONGO_MAIN_URL=mongodb://localhost:27017/mydb

# Example file paths
# CSV_DATA_PATH=/data/csv
# EXCEL_DATA_PATH=/data/excel
